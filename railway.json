{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd ventiAI && npm install"
  },
  "deploy": {
    "startCommand": "cd ventiAI && node backend/server.js",
    "healthcheck": {
      "interval": 10,
      "timeout": 5,
      "path": "/api/stats"
    }
  }
}
